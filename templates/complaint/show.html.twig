{% extends 'base.html.twig' %}

{% block title %}Complaint{% endblock %}

{% block body %}
    <h1>Complaint</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ complaint.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ complaint.text }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ complaint.createdAt ? complaint.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedBy</th>
                <td>{{ complaint.author.getName() }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_complaint_edit', {'id': complaint.id}) }}">edit</a>

    {{ include('complaint/_delete_form.html.twig') }}
{% endblock %}
